<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lobster"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="48sp" />
    <EditText
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:hint="@string/username"
        android:textColorHint="#40FFFFFF"
        android:layout_below="@+id/titleInstagram"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="24sp"
        android:background="@drawable/rectangle_shape"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:hint="@string/password"
        android:textColorHint="#40FFFFFF"
        android:layout_below="@+id/Username"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:background="@drawable/rectangle_shape"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/password"
        android:text="@string/Login"
        android:textSize="24sp"
        android:background="@drawable/button_border"
        android:padding="10dp"
        android:textColor="#40FFFFFF"
        />
    <TextView
        android:id="@+id/Forgotyourlogindetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_login_detail"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/Login"
        android:textColor="#80FFFFFF"/>
    <TextView
        android:id="@+id/Gethelpsigningin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_help_signing_in"
        android:layout_below="@+id/Login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Forgotyourlogindetail"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/divider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Forgotyourlogindetail"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/divider_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="#60FFFFFF"/>

        <TextView
            android:id="@+id/Or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/or"
            android:layout_marginTop="10dp"
            android:textColor="@color/white" />

        <View
            android:id="@+id/divider_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:background="#60FFFFFF"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/logofacebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/divider_layout"
        android:src="@drawable/facebook"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp"
        />

    <TextView
        android:id="@+id/LoginWithFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/logofacebook"
        android:text="@string/log_in_with_facebook"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_shape">
        <TextView
            android:id="@+id/Donthaveanaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"
            android:textColor="#80FFFFFF"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_marginStart="90dp"
            />

        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_toEndOf="@id/Donthaveanaccount"
            android:layout_marginStart="-35dp"/>

    </RelativeLayout>


</RelativeLayout>